{
  "name": "hexagonal-grid",
  "version": "1.0.8",
  "description": "a library for making hexagonal grids",
  "scripts": {
    "build": "npm run build:jsdoc & npm run build:production & npm run build:development",
    "build:jsdoc": "npx jsdoc -r src -d dist/docs -R README.md",
    "build:production": "npx webpack -p --output ./dist/hexagonal-grid.min.js",
    "build:development": "npx webpack -d --output ./dist/hexagonal-grid.js",
    "start": "npx webpack-dev-server --content-base ./dist",
    "publish": "npm run build; npx gh-pages -d dist"
  },
  "main": "src/index.js",
  "keywords": [
    "hexagon",
    "grid"
  ],
  "author": "hitcherland",
  "license": "ISC",
  "devDependencies": {
    "gh-pages": "^2.1.1",
    "jsdoc": "^3.6.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.8.0"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "three": "^0.107.0"
  }
}
